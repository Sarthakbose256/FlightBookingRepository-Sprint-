@{
    ViewBag.Title = "Registration Successful";
}

<div class="container">
    <h2>Registration Successful</h2>

    <!-- Display success message from the controller -->
    <div class="alert alert-success" role="alert">
        @ViewBag.message
    </div>

    <!-- Provide a button to return to login page -->
    <div>
        <a href="@Url.Action("Login", "User")" class="btn btn-primary">
            Go to Login
        </a>
    </div>
</div>
