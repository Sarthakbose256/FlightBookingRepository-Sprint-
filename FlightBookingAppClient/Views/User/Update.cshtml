@model FlightBookingAppClient.Models.User

@{
    ViewBag.Title = "Update";
}

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()

    <div class="container">
        <div class="card shadow-lg">
            <div class="card-header bg-info text-white">
                <h4>Update Your Details</h4>
            </div>
            <div class="card-body">
                <hr />
                @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                @Html.HiddenFor(model => model.UserId)

                
                <div class="form-group row">
                    @Html.LabelFor(model => model.UserName, new { @class = "col-sm-2 col-form-label font-weight-bold" })
                    <div class="col-sm-10">
                        @Html.EditorFor(model => model.UserName, new { htmlAttributes = new { @class = "form-control" } })
                        @Html.ValidationMessageFor(model => model.UserName, "", new { @class = "text-danger" })
                    </div>
                </div>

              
                <div class="form-group row">
                    @Html.LabelFor(model => model.Email, new { @class = "col-sm-2 col-form-label font-weight-bold" })
                    <div class="col-sm-10">
                        @Html.EditorFor(model => model.Email, new { htmlAttributes = new { @class = "form-control" } })
                        @Html.ValidationMessageFor(model => model.Email, "", new { @class = "text-danger" })
                    </div>
                </div>

                
                <div class="form-group row">
                    @Html.LabelFor(model => model.password, new { @class = "col-sm-2 col-form-label font-weight-bold" })
                    <div class="col-sm-10">
                        @Html.EditorFor(model => model.password, new { htmlAttributes = new { @class = "form-control" } })
                        @Html.ValidationMessageFor(model => model.password, "", new { @class = "text-danger" })
                    </div>
                </div>

                
                <div class="form-group row">
                    @Html.LabelFor(model => model.UserPhone, new { @class = "col-sm-2 col-form-label font-weight-bold" })
                    <div class="col-sm-10">
                        @Html.EditorFor(model => model.UserPhone, new { htmlAttributes = new { @class = "form-control" } })
                        @Html.ValidationMessageFor(model => model.UserPhone, "", new { @class = "text-danger" })
                    </div>
                </div>

                
                <div class="form-group row">
                    <div class="col-sm-10 offset-sm-2">
                        <input type="submit" value="Save" class="btn btn-success btn-lg w-100" />
                    </div>
                </div>
            </div>
            <div class="card-footer text-center">
                @Html.ActionLink("Back", "GetDetails", null, new { @class = "btn btn-secondary btn-sm" })
            </div>
        </div>
    </div>
}


<style>
    .container {
        max-width: 800px;
        margin: 0 auto;
        padding: 20px;
    }

    .card {
        margin-top: 20px;
    }

    .card-header {
        background-color: #007bff;
        border-color: #007bff;
    }

    .card-body {
        background-color: #f8f9fa;
    }

    .card-footer {
        background-color: #ffffff;
    }

    .form-group {
        margin-bottom: 1.5rem;
    }

    .form-control {
        border-radius: 5px;
        border: 1px solid #ccc;
        padding: 10px;
        font-size: 1rem;
        width: 100%;
    }

        .form-control:focus {
            border-color: #66afe9;
            box-shadow: 0 0 5px rgba(102, 175, 233, 0.6);
        }

    .font-weight-bold {
        font-weight: bold;
    }

    .btn {
        font-size: 1.2rem;
        padding: 15px;
        border-radius: 5px;
        transition: background-color 0.3s ease, transform 0.3s ease;
    }

    .btn-success {
        background-color: #28a745;
        border-color: #28a745;
    }

        .btn-success:hover {
            background-color: #218838;
            border-color: #1e7e34;
            transform: scale(1.05);
        }

    .btn-secondary {
        background-color: #6c757d;
        border-color: #6c757d;
    }

        .btn-secondary:hover {
            background-color: #5a6268;
            border-color: #545b62;
            transform: scale(1.05);
        }

    .text-danger {
        color: #e74a3b;
    }

    .w-100 {
        width: 100%;
    }

    .text-center {
        text-align: center;
    }
</style>
