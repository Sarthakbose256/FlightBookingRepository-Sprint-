@{
    ViewBag.Title = "User Dashboard";
}

<main class="dashboard-container">
    
    <div class="logout-btn-container">
        @Html.ActionLink("Logout", "Index", "Home", null, new { @class = "btn btn-danger btn-sm" })
    </div>

    <section class="row" aria-labelledby="aspnetTitle">
        <h1 id="title" class="dashboard-title">User Dashboard</h1>
    </section>

    <div class="row">
       
        <section class="col-md-4">
            <div class="d-flex justify-content-center mb-3">
                @Html.ActionLink("Search flights", "Searchflights", null, new { @class = "btn btn-success btn-lg shadow-lg hover-btn" })
            </div>
        </section>

      
        <section class="col-md-4">
            <div class="d-flex justify-content-center mb-3">
                @Html.ActionLink("View booking history", "BookHistory", null, new { @class = "btn btn-warning btn-lg shadow-lg hover-btn" })
            </div>
        </section>

        
        <section class="col-md-4">
            <div class="d-flex justify-content-center mb-3">
                @Html.ActionLink("View Account", "GetDetails", null, new { @class = "btn btn-primary btn-lg shadow-lg hover-btn" })
            </div>
        </section>
    </div>
</main>


<style>
    
    .dashboard-container {
        background-image: url('https://backtojerusalem.com/wp-content/uploads/2016/11/Pat-Airplane-and-Sky.jpg'); /* Path relative to wwwroot (for ASP.NET Core) */
        background-size: cover; 
        background-position: center;
        background-repeat: no-repeat; 
        min-height: 100vh; 
        padding: 30px; 
    }

    
    .dashboard-title {
        color: white; 
        font-size: 3rem; 
        font-family: 'Arial', sans-serif; 
        font-weight: bold; 
        text-align: center; 
        text-shadow: 3px 3px 6px rgba(0, 0, 0, 0.3); 
        margin-bottom: 30px; 
        text-transform: uppercase; 
    }

   
    .btn {
        width: 100%;
        font-size: 1.2rem; 
        text-align: center; 
        padding: 15px; 
        border-radius: 8px; 
        transition: background-color 0.3s ease, transform 0.3s ease; 
    }

        
        .btn:hover {
            background-color: #555; 
            transform: scale(1.05); 
        }

    
    .btn-success {
        background-color: #28a745;
        border-color: #28a745;
    }

    .btn-warning {
        background-color: #ffc107;
        border-color: #ffc107;
    }

    .btn-primary {
        background-color: #007bff;
        border-color: #007bff;
    }

    
    .logout-btn-container {
        position: fixed;
        top: 20px;
        right: 20px;
        z-index: 1000; 
    }

        .logout-btn-container .btn {
            font-size: 1rem;
            padding: 10px 15px;
        }
</style>
