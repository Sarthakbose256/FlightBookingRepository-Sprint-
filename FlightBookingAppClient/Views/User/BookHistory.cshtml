@model IEnumerable<FlightBookingAppClient.Models.UserBooking>

@{
    ViewBag.Title = "Book History";
}

<div class="container">
    <div class="card shadow-lg">
        <div class="card-header bg-info text-white">
            <h4>Booking History</h4>
        </div>
        <div class="card-body">
            <table class="table table-striped table-bordered table-hover">
                <thead class="thead-dark" style="background-color: black;">
                    <tr>
                        <th>@Html.DisplayNameFor(model => model.BookingId)</th>
                        <th>@Html.DisplayNameFor(model => model.FlightNumber)</th>
                        <th>@Html.DisplayNameFor(model => model.TicketPrice)</th>
                        <th>@Html.DisplayNameFor(model => model.BookingDate)</th>
                        <th>@Html.DisplayNameFor(model => model.SeatNumber)</th>
                        <th>@Html.DisplayNameFor(model => model.FlightDate)</th>
                        <th>Actions</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model)
                    {
                        <tr>
                            <td>@Html.DisplayFor(modelItem => item.BookingId)</td>
                            <td>@Html.DisplayFor(modelItem => item.FlightNumber)</td>
                            <td>@Html.DisplayFor(modelItem => item.TicketPrice)</td>
                            <td>@Html.DisplayFor(modelItem => item.BookingDate)</td>
                            <td>@Html.DisplayFor(modelItem => item.SeatNumber)</td>
                            <td>@Html.DisplayFor(modelItem => item.FlightDate)</td>
                            <td>
                                <a href="@Url.Action("CancelBooking", new { bookingid = item.BookingId })" class="btn btn-danger btn-sm">Cancel</a>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>

            <div class="text-center">
                <a href="@Url.Action("UserDashboard")" class="btn btn-info btn-sm">Back to Dashboard</a>
            </div>
        </div>
    </div>
</div>


<style>
    .container {
        max-width: 900px;
        margin-top: 20px;
    }

    .card {
        margin-top: 20px;
    }

    .card-header {
        background-color: #007bff;
        color: white;
    }

    .card-body {
        background-color: #f8f9fa;
    }

    table {
        width: 100%;
    }

        table th, table td {
            padding: 12px;
            text-align: left;
        }

        table th {
            background-color: black;
            color: white;
        }

        table td {
            background-color: #ffffff;
        }

        table tbody tr:hover {
            background-color: #f1f1f1;
        }

    .btn {
        padding: 10px 15px;
        border-radius: 5px;
        transition: transform 0.3s ease;
    }

        .btn:hover {
            transform: scale(1.05);
        }

    .btn-danger {
        background-color: #dc3545;
        border-color: #dc3545;
    }

        .btn-danger:hover {
            background-color: #c82333;
            border-color: #bd2130;
        }

    .btn-info {
        background-color: #17a2b8;
        border-color: #17a2b8;
    }

        .btn-info:hover {
            background-color: #138496;
            border-color: #117a8b;
        }

    .text-center {
        margin-top: 20px;
    }
</style>
