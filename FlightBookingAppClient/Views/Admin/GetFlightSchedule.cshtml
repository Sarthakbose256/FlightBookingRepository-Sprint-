@model IEnumerable<FlightBookingAppClient.Models.FlightScheduleDTO>
@{
    ViewBag.Title = "Flight Schedule";
}

<div class="container">
    <h2 class="text-center my-4">Flight Schedule</h2>

    <p class="text-center">
        @Html.ActionLink("Add New Flight", "AddFlightSchedule", null, new { @class = "btn btn-success btn-lg" })
    </p>

    <div class="table-responsive">
        <table class="table table-striped table-bordered table-hover">
            <thead class="thead-dark">
                <tr>
                    <th>Flight Number</th>
                    <th>Airline</th>
                    <th>Departure Time</th>
                    <th>Arrival Time</th>
                    <th>Flight Duration</th>
                    <th>Flight Date</th>
                    <th>Departure Location</th>
                    <th>Arrival Location</th>
                    <th>Actions</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    <tr>
                        <td>@Html.DisplayFor(modelItem => item.FlightNumber)</td>
                        <td>@Html.DisplayFor(modelItem => item.Airline)</td>
                        <td>@item.DepartureTime.ToString("HH:mm")</td>
                        <td>@item.ArrivalTime.ToString("HH:mm")</td>
                        <td>@item.Duration.ToString(@"hh\:mm\:ss")</td>
                        <td>@item.FlightDate.ToString("yyyy - MM - dd")</td>
                        <td>@Html.DisplayFor(modelItem => item.DepartureLoc)</td>
                        <td>@Html.DisplayFor(modelItem => item.ArrivalLocation)</td>
                        <td>
                            <div class="btn-group">
                                @Html.ActionLink("Update", "UpdateSchedule", new { scheduleId = item.ScheduleId }, new { @class = "btn btn-info btn-sm" })
                                @Html.ActionLink("Get Passengers", "GetPassengers", new { flightnumber = item.FlightNumber }, new { @class = "btn btn-primary btn-sm" })
                            </div>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>

    <div class="text-center my-4">
        <p>
            @Html.ActionLink("Back to Dashboard", "AdminDashboard", null, new { @class = "btn btn-secondary btn-sm" })
        </p>
    </div>
</div>

<!-- Custom Styling -->
<style>
    .container {
        margin-top: 30px;
        margin-bottom: 30px;
    }

    .table {
        width: 100%;
        margin-top: 20px;
        border-collapse: collapse;
        font-size: 1rem;
    }

        .table th {
            font-weight: bold;
            text-align: center;
            background-color: #343a40;
            color: white;
        }

        .table td {
            text-align: center;
            vertical-align: middle;
        }

    .table-striped tbody tr:nth-child(odd) {
        background-color: #f9f9f9;
    }

    .table-bordered td, .table-bordered th {
        border: 1px solid #ddd;
    }

    .table-hover tbody tr:hover {
        background-color: #f1f1f1;
    }

    .btn-group .btn {
        margin-right: 5px;
    }

    .btn-group {
        display: flex;
        justify-content: space-between;
    }

    .btn:hover {
        transform: scale(1.05);
        transition: transform 0.3s ease;
    }

    /* Add a slight margin to the action buttons */
    .btn-success {
        background-color: #28a745;
        border-color: #28a745;
    }

    .btn-info {
        background-color: #17a2b8;
        border-color: #17a2b8;
    }

    .btn-primary {
        background-color: #007bff;
        border-color: #007bff;
    }

    .btn-secondary {
        background-color: #6c757d;
        border-color: #6c757d;
    }

    .my-4 {
        margin-top: 1.5rem;
        margin-bottom: 1.5rem;
    }

    .text-center {
        text-align: center;
    }
</style>
