@model IEnumerable<FlightBookingAppClient.Models.FlightDetail>

@{
    ViewBag.Title = "GetFlightDetails";
}


<div class="container mt-5">
    <h2 class="text-center mb-4">Flight Details</h2>

    
    <table class="table table-striped table-bordered table-hover">
        <thead class="thead-dark">
            <tr>
                <th>@Html.DisplayNameFor(model => model.FlightNumber)</th>
                <th>@Html.DisplayNameFor(model => model.Airline)</th>
                <th>@Html.DisplayNameFor(model => model.FlightType)</th>
                <th>@Html.DisplayNameFor(model => model.TicketPrice)</th>
                <th>@Html.DisplayNameFor(model => model.Discount)</th>
                <th></th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>@Html.DisplayFor(model => item.FlightNumber)</td>
                    <td>@Html.DisplayFor(modelItem => item.Airline)</td>
                    <td>@Html.DisplayFor(modelItem => item.FlightType)</td>
                    <td>@Html.DisplayFor(modelItem => item.TicketPrice)</td>
                    <td>@Html.DisplayFor(modelItem => item.Discount)</td>
                    <td>
                        
                        @Html.ActionLink("Edit", "AddDiscount", new { flightnumber = item.FlightNumber }, new { @class = "btn btn-info btn-sm" })
                    </td>
                </tr>
            }
        </tbody>
    </table>

  
    <p class="text-center">
        @Html.ActionLink("Back", "AdminDashboard", null, new { @class = "btn btn-secondary btn-sm" })
    </p>
</div>

<style>
    body {
        background-color: #f8f9fa;
        font-family: 'Arial', sans-serif;
    }

    .table th, .table td {
        text-align: center;
        vertical-align: middle;
    }

    .thead-dark th {
        background-color: #343a40;
        color: white;
    }

    .btn-info, .btn-secondary {
        text-transform: uppercase;
        font-weight: bold;
        transition: background-color 0.3s ease;
    }

        .btn-info:hover {
            background-color: #007bff;
        }

        .btn-secondary:hover {
            background-color: #6c757d;
        }

    .table-striped tbody tr:nth-of-type(odd) {
        background-color: #f2f2f2;
    }

    .table-hover tbody tr:hover {
        background-color: #e9ecef;
    }

    .container {
        max-width: 1200px;
    }
</style>
