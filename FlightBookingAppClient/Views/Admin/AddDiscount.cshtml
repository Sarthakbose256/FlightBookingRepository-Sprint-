@model FlightBookingAppClient.Models.FlightDetail

@{
    ViewBag.Title = "AddDiscount";
}


<div class="container mt-5">
    <h2 class="text-center mb-4">Add Discount</h2>

    @using (Html.BeginForm())
    {
        @Html.AntiForgeryToken()

        <div class="form-horizontal">
            <hr />

            
            @Html.ValidationSummary(true, "", new { @class = "alert alert-danger" })

        
            @Html.HiddenFor(model => model.FlightNumber)
            @Html.HiddenFor(model => model.Airline)
            @Html.HiddenFor(model => model.FlightType)
            @Html.HiddenFor(model => model.TicketPrice)

           
            <div class="form-group row">
                @Html.LabelFor(model => model.Discount, htmlAttributes: new { @class = "col-md-2 col-form-label" })
                <div class="col-md-10">
                    @Html.EditorFor(model => model.Discount, new { htmlAttributes = new { @class = "form-control" } })
                    @Html.ValidationMessageFor(model => model.Discount, "", new { @class = "text-danger" })
                </div>
            </div>

            <div class="form-group row">
                <div class="col-md-offset-2 col-md-10">
                    <input type="submit" value="Add Discount" class="btn btn-primary btn-lg" />
                </div>
            </div>
        </div>
    }

   
    <div class="text-center mt-4">
        @Html.ActionLink("Back", "GetFlightDetails", null, new { @class = "btn btn-secondary btn-sm" })
    </div>
</div>


<style>
    body {
        background-color: #f8f9fa;
        font-family: 'Arial', sans-serif;
    }

    .container {
        max-width: 900px;
    }

    h2 {
        color: #007bff;
        font-weight: bold;
    }

    .form-horizontal .form-group {
        margin-bottom: 1.5rem;
    }

    .btn-primary {
        background-color: #007bff;
        border-color: #007bff;
    }

        .btn-primary:hover {
            background-color: #0056b3;
            border-color: #004085;
        }

    .btn-secondary {
        background-color: #6c757d;
        border-color: #6c757d;
    }

        .btn-secondary:hover {
            background-color: #5a6268;
            border-color: #4e555b;
        }

    .alert-danger {
        background-color: #f8d7da;
        color: #721c24;
        padding: 10px;
    }

    .form-control {
        border-radius: .25rem;
        padding: .375rem .75rem;
    }

    .col-form-label {
        font-weight: bold;
    }
</style>
